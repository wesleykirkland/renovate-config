{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "description": "Renovate configuration for weekly updates with high confidence changes",
  "extends": [
    "config:recommended",
    ":dependencyDashboard",
    ":semanticCommits",
    ":separateMajorReleases",
    ":combinePatchMinorReleases",
    ":ignoreUnstable",
    ":prImmediately",
    ":updateNotScheduled",
    ":automergeDisabled",
    ":ignoreModulesAndTests",
    ":autodetectPinVersions",
    ":prHourlyLimit2",
    ":prConcurrentLimit10"
  ],
  "timezone": "America/New_York",
  "schedule": [
    "before 6am on Sunday"
  ],
  "prCreation": "not-pending",
  "prNotPendingHours": 72,
  "stabilityDays": 3,
  "minimumReleaseAge": "3 days",
  "internalChecksFilter": "strict",
  "confidenceLevel": "high",
  "vulnerabilityAlerts": {
    "enabled": true,
    "schedule": ["at any time"],
    "minimumReleaseAge": null,
    "stabilityDays": 0,
    "prCreation": "immediate"
  },
  "osvVulnerabilityAlerts": true,
  "packageRules": [
    {
      "description": "Security updates - immediate processing for zero-day vulnerabilities",
      "matchPackagePatterns": ["*"],
      "matchUpdateTypes": ["patch"],
      "matchCurrentVersion": "!/^0\\./",
      "vulnerabilityAlerts": {
        "enabled": true,
        "schedule": ["at any time"],
        "minimumReleaseAge": null,
        "stabilityDays": 0,
        "prCreation": "immediate"
      }
    },
    {
      "description": "High confidence patch updates",
      "matchUpdateTypes": ["patch"],
      "matchConfidence": ["high", "very high"],
      "stabilityDays": 3,
      "minimumReleaseAge": "3 days"
    },
    {
      "description": "High confidence minor updates",
      "matchUpdateTypes": ["minor"],
      "matchConfidence": ["high", "very high"],
      "stabilityDays": 3,
      "minimumReleaseAge": "3 days"
    },
    {
      "description": "Major updates - require manual review",
      "matchUpdateTypes": ["major"],
      "matchConfidence": ["high", "very high"],
      "stabilityDays": 7,
      "minimumReleaseAge": "7 days",
      "reviewRequired": true
    },
    {
      "description": "Low/neutral confidence updates - skip",
      "matchConfidence": ["low", "neutral"],
      "enabled": false
    },
    {
      "description": "Development dependencies - more lenient",
      "matchDepTypes": ["devDependencies"],
      "matchUpdateTypes": ["patch", "minor"],
      "stabilityDays": 1,
      "minimumReleaseAge": "1 day"
    },
    {
      "description": "Pin digest updates",
      "matchUpdateTypes": ["pinDigest"],
      "schedule": ["before 6am on Sunday"],
      "stabilityDays": 0,
      "minimumReleaseAge": null
    }
  ],
  "lockFileMaintenance": {
    "enabled": true,
    "schedule": ["before 6am on Sunday"]
  },
  "dependencyDashboard": true,
  "dependencyDashboardTitle": "Dependency Dashboard",
  "dependencyDashboardHeader": "This issue lists Renovate updates and detected dependencies. Read the [Dependency Dashboard](https://docs.renovatebot.com/key-concepts/dashboard/) docs to learn more.",
  "dependencyDashboardFooter": "- [ ] <!-- rebase-check -->**Click on this checkbox to rebase all open PRs**",
  "assignees": [],
  "reviewers": [],
  "labels": ["dependencies"],
  "commitMessagePrefix": "chore:",
  "commitMessageAction": "update",
  "commitMessageTopic": "{{depName}}",
  "commitMessageExtra": "to {{newVersion}}",
  "prTitle": "{{commitMessagePrefix}} {{commitMessageAction}} {{commitMessageTopic}} {{commitMessageExtra}}",
  "prBodyTemplate": "{{{header}}}{{{table}}}{{{notes}}}{{{changelogs}}}{{{configDescription}}}{{{controls}}}{{{footer}}}",
  "prBodyColumns": [
    "Package",
    "Change",
    "Age",
    "Adoption",
    "Passing",
    "Confidence"
  ],
  "prBodyNotes": [
    "This PR was generated by Renovate Bot on its weekly schedule.",
    "Updates are only included if they have high confidence and have been available for at least 72 hours.",
    "Security vulnerabilities are processed immediately regardless of age."
  ]
}
